<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#92C3DA"
    tools:context=".Menu">

    <Button
        android:id="@+id/BSocial"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:layout_marginTop="220dp"
        android:fontFamily="@font/audiowide"
        android:text="Social"
        android:textSize="20sp"
        app:backgroundTint="#AE1F1F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BPelis"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:layout_marginTop="92dp"
        android:fontFamily="@font/audiowide"
        android:text="Buscar pelis"
        android:textSize="20sp"
        app:backgroundTint="#AE1F1F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/BPerfil"
        android:layout_width="254dp"
        android:layout_height="54dp"
        android:layout_marginTop="348dp"
        android:fontFamily="@font/audiowide"
        android:text="Mis listas"
        android:textSize="20sp"
        app:backgroundTint="#AE1F1F"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/signoutgoogle"
        android:layout_width="112dp"
        android:layout_height="89dp"
        android:layout_marginBottom="76dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/common_google_signin_btn_icon_disabled" />

    <TextView
        android:id="@+id/signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="480dp"
        android:fontFamily="@font/audiowide"
        android:text="SignOutGoogle"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/signoutgoogle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>